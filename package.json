{
  "name": "electron-demo",
  "version": "1.0.4",
  "description": "electron demo",
  "main": "src/main/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build1": "electron-packager . --overwrite  --ignore=build/ --platform=win32 --arch=ia32 --out=dist",
    "build": "electron-packager . --overwrite --ignore=build/  --appName=创客 --asar  --win --out=dist --arch=x64 --icon=build/icons/48x48.ico",
    "upload:app": "ts-node ./scripts/upload.ts",
    "pack": "electron-builder && npm run upload:app",
    "major": "npm version major",
    "minor": "npm version minor",
    "patch": "npm version patch"
  },
  "dependencies": {
    "electron-log": "^4.2.4",
    "electron-updater": "^4.3.1",
    "glob": "^7.1.6"
  },
  "devDependencies": {
    "@types/ali-oss": "^6.16.2",
    "@types/node": "^14.18.1",
    "ali-oss": "^6.16.0",
    "cross-env": "^7.0.3",
    "devtron": "^1.4.0",
    "electron": "^15.3.1",
    "electron-builder": "^22.13.1",
    "electron-packager": "^15.4.0",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:xl07097/electron-demo.git"
  },
  "author": "xueliang",
  "license": "ISC",
  "build": {
    "productName": "创客",
    "appId": "com.xueliang.xiangshuye",
    "directories": {
      "output": "build"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://file.zhiqiuge.com/software/install/"
      }
    ],
    "files": [
      "src/**/*"
    ],
    "win": {
      "icon": "build/icons/256x256.ico",
      "artifactName": "${productName}-${version}.${ext}",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "deleteAppDataOnUninstall": true,
      "installerIcon": "build/icons/256x256.ico",
      "createDesktopShortcut": true
    }
  }
}
