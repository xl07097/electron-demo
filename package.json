{
  "name": "electron-demo",
  "version": "1.0.5",
  "description": "electron demo",
  "main": "dist/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron ./dist/main.js",
    "build:app": "electron-builder build --x64 && npm run upload:app",
    "build:main": "tsc --build ./main/tsconfig.json",
    "upload:app": "ts-node ./scripts/upload.ts",
    "major": "npm version major",
    "minor": "npm version minor",
    "patch": "npm version patch",
    "watch:main": "tsc --build ./main/tsconfig.json -w"
  },
  "dependencies": {
    "electron-log": "^4.2.4",
    "electron-updater": "^4.3.1",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@types/ali-oss": "^6.16.2",
    "@types/node": "^14.18.1",
    "ali-oss": "^6.16.0",
    "cross-env": "^7.0.3",
    "devtron": "^1.4.0",
    "electron": "^15.3.1",
    "electron-builder": "^22.13.1",
    "electron-packager": "^15.4.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:xl07097/electron-demo.git"
  },
  "author": "xueliang",
  "license": "ISC",
  "build": {
    "productName": "创客",
    "appId": "com.xueliang.xiangshuye",
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://file.zhiqiuge.com/software/install/"
      }
    ],
    "files": [
      "dist",
      "preload",
      "build"
    ],
    "win": {
      "icon": "assets/icons/256x256.ico",
      "artifactName": "${productName}-${version}.${ext}",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "deleteAppDataOnUninstall": true,
      "installerIcon": "assets/icons/256x256.ico",
      "createDesktopShortcut": true
    }
  }
}
