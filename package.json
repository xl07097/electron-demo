{
  "name": "electron-demo",
  "version": "1.1.17",
  "description": "electron demo",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build:main && cross-env NODE_ENV=development electron ./dist/main.js",
    "precompiler": "cross-env NODE_ENV=production electron-builder build --x64",
    "build:release": "electron-builder build --x64 && npm run upload:app",
    "build:main": "tsc --build ./main/tsconfig.json",
    "upload:app": "ts-node ./scripts/upload.ts",
    "major": "npm version major",
    "minor": "npm version minor",
    "patch": "npm version patch",
    "watch:main": "tsc --build ./main/tsconfig.json -w"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-updater": "^6.1.1",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@types/ali-oss": "^6.16.2",
    "@types/node": "^16.18.23",
    "ali-oss": "^6.16.0",
    "cross-env": "^7.0.3",
    "devtron": "^1.4.0",
    "electron": "^25.1.0",
    "electron-builder": "^24.4.0",
    "ts-node": "^10.9.1",
    "ffi-napi": "^4.0.3",
    "typescript": "^5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:xl07097/electron-demo.git"
  },
  "author": "xueliang",
  "license": "ISC",
  "build": {
    "productName": "创客",
    "appId": "com.xueliang.xiangshuye",
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://files.zhiqiuge.com/software/install/"
      }
    ],
    "asarUnpack": [
      "exec"
    ],
    "asar": {
      "smartUnpack": true
    },
    "files": [
      "assets",
      "dist",
      "preload",
      "build",
      "exec"
    ],
    "win": {
      "icon": "assets/icons/256x256.ico",
      "artifactName": "${productName}-${version}.${ext}",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "deleteAppDataOnUninstall": true,
      "installerIcon": "assets/icons/256x256.ico",
      "createDesktopShortcut": true
    }
  }
}
